# Enforce LF for text files to avoid CRLF/LF warnings on Windows
* text=auto eol=lf

# Explicit rules for project file types
*.ts     text eol=lf
*.tsx    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf
*.json   text eol=lf
*.prisma text eol=lf
*.sql    text eol=lf
package-lock.json text eol=lf
